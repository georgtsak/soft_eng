@model Soft_Eng_Spring2024.Models.Announcement

@{
    ViewData["Title"] = "Τροποποίηση Ανακοίνωσης";
}

<link rel="stylesheet" type="text/css" href="~/css/forma_anakoin_events.css" />
<link rel="stylesheet" type="text/css" href="~/css/auth.css" />


<div class="hero_area">
    <div class="container">
        <div class="forma-wrap">
            <div class="forma-html">
                <input id="tab-1" type="radio" name="tab" class="anakoinwsh" checked><label for="tab-1" class="tab">Ανακοίνωση</label>
                <input id="tab-2" type="radio" name="tab" class="ekdhlwsh"><label for="tab-2" class="tab"></label>
                <div class="login-form">

                    @using (Html.BeginForm("Edit", "Announcements", FormMethod.Post))
                    {
                        <div class="anakoinwsh-htm">
                            <div class="group">
                                <label class="label">Τίτλος</label>
                                <input type="text" asp-for="Title" class="input">
                            </div>
                            <div class="group">
                                <label class="label">Κείμενο</label>
                                <textarea asp-for="Body" class="input" style="height: 100px; overflow-y:auto; min-height:55px; max-height: 150px;"></textarea>
                            </div>
                            <!--koubi-->
                            <div class="hr"></div>
                            <div class="group">
                                <input type="hidden" asp-for="Id" />
                                <input type="hidden" asp-for="Author" />
                                <input type="submit" class="btn float-right login_btn" value="Αποθήκευση">
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>











