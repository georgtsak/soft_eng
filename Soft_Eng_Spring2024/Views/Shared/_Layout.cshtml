<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>@ViewData["Title"]</title>


    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css"/>
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.css"/>
    <link href="https://fonts.googleapis.com/css?family=Baloo+Chettan|Dosis:400,600,700|Poppins:400,600,700&display=swap" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/responsive.css" rel="stylesheet" />
</head>

<body>
    <div class="hero_area">
        <header class="header_section">
            <div class="container">
                <div class="header_nav">
                    <a class="navbar-brand brand_desktop" href="index.html">
                        <img src="~/images/logo.png" alt="" />
                    </a>
                    <div class="main_nav">
                        <div class="top_nav">
                            <ul class=" ">
                                <li class="">
                                    <a class="" href="">

                                        <img src="~/images/telephone.png" alt="" />
                                        <span> 210 4142000</span>
                                    </a>
                                </li>
                                <li class="">
                                    <a class="" href="">
                                        <img src="~/images/mail.png" alt="" />
                                        <span>info@unipi.gr</span>
                                    </a>
                                </li>
                                <li class="">
                                    <a class="" href="">
                                        <img src="~/images/location.png" alt="" />
                                        <span>Μ. Καραολή & Α. Δημητρίου 80, Πειραιάς</span>
                                    </a>
                                </li>
                            </ul>
                        </div>

                        <div class="bottom_nav">
                            <nav class="navbar navbar-expand-lg custom_nav-container">
                                <a class="navbar-brand brand_mobile" href="index.html">
                                    <img src="~/images/logo.png" alt="" />
                                </a>
                                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                    <span class="navbar-toggler-icon"></span>
                                </button>
                                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                    <div class="d-flex ml-auto flex-column flex-lg-row align-items-center">
                                        <ul class="navbar-nav  ">
                                            <li class="nav-item active">
                                                <a class="nav-link" asp-controller="Home" asp-action="Index"><b>ΤΜΗΜΑ</b> <span class="sr-only">(current)</span></a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" asp-controller="Announcements" asp-action="Index"> ΑΝΑΚΟΙΝΩΣΕΙΣ </a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" asp-controller="Events" asp-action="Index"> ΕΚΔΗΛΩΣΕΙΣ</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" asp-controller="Home" asp-action="Study"> ΣΠΟΥΔΕΣ </a>
                                            </li>

                                            <li class="nav-item">
                                                <a class="nav-link" asp-controller="Home" asp-action="Services">ΥΠΗΡΕΣΙΕΣ</a>
                                            </li>
                                             @if (User == null || User.Identity == null || User.Identity.IsAuthenticated)
                                            {
                                                <li class="nav-item">
                                                    <a class="nav-link" href="#">@User.Identity.Name</a>
                                                </li>
                                                @if (User.FindFirst("Role").Value == "2" || User.FindFirst("Role").Value == "3")
                                                {
                                                    <li class="nav-item">
                                                        <a class="nav-link" asp-controller="Announcements" asp-action="Create">Προσθήκη Περιεχομένου</a>
                                                    </li>
                                                }
                                                @if (User.FindFirst("Role").Value == "3")
                                                {
                                                    <li class="nav-item">
                                                        <a class="nav-link" asp-controller="Users" asp-action="User_Approval">Αιτήματα Χρηστών</a>
                                                    </li>
                                                }
                                            }
                                        </ul>
                                        @if (User == null || User.Identity == null || User.Identity.IsAuthenticated)
                                        {
                                            <a class="btn btn-outline-secondary" asp-area="" asp-controller="Users" asp-action="Logout">Logout</a>
                                            
                                        }
                                        else
                                        {
                                            <form class="form-inline">
                                                <a class="btn btn-outline-secondary" asp-controller="Users" asp-action="Login" role="button">Σύνδεση/Εγγραφή</a>
                                            </form>
                                        }
                                       
                                    </div>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        @RenderBody()
    </body>

</html>