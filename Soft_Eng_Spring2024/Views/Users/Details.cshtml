@model Soft_Eng_Spring2024.Models.User

@{
    ViewData["Title"] = "Details";

    string GetRoleName(int role)
    {
        return role switch
        {
            0 => "Δεν έχει καθοριστεί",
            1 => "Φοιτητής",
            2 => "Καθηγητής",
            3 => "Διαχειριστής"
        };
    }
}

<div style="background-color:rgb(16,16,16,0.5);color:white;margin:10px;margin-right:200px;margin-left:200px;padding:50px;">
    <h1><b>ΣΤΟΙΧΕΙΑ ΧΡΗΣΤΗ</b></h1>
    <br>

    <div style="background-color:rgb(255,255,255,0.12);padding-top:40px;padding-bottom:40px;padding:10px;width:auto;">
        <h3>
            Ονοματεπώνυμο:
            <b style="display:inline;">@Html.DisplayFor(model => model.Firstname)</b>
            <b style="display:inline;">@Html.DisplayFor(model => model.Lastname)</b>
        </h3>

        <div>
            <span style="color:#808080; margin-right: 10px;"><i>Ρόλος: @GetRoleName(Model.Role)</i></span>
        </div>
        <br>
        <h5 style="color:#fff;">Email εγγραφής: @Html.DisplayFor(model => model.Email) </h5>



    </div>
    <div>
        <br><br>
        @if (User == null || User.Identity == null || User.Identity.IsAuthenticated)
        {
            @if (User.FindFirst("Role").Value == "2" || User.FindFirst("Role").Value == "3")
            {
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-info">Επεξεργασία</a>

            }
        }
        <a asp-action="Index1" class="btn btn-outline-secondary">Επιστροφή</a>
    </div>

</div>