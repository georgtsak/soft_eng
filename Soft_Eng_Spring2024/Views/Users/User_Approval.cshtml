@model IEnumerable<Soft_Eng_Spring2024.Models.User>



<link rel="stylesheet" type="text/css" href="~/css/auth.css" />

    <div class="hero_area">
		<div class="container">
		<div class="d-flex justify-content-center h-100">
			<div class="card">
				<div class="card-header">
					<h3>Αιτήματα Εγγραφής Χρηστών</h3>
				</div>
				<div class="card-body">
					<table class="table" style="color:white;">
						<thead>
							<tr>
								<th>Όνομα</th>
								<th>Επώνυμο</th>
								<th>Email</th>
								<th>Ρόλος Χρήστη</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
                            @foreach (var item in Model)
                            {
                                @using (Html.BeginForm("User_Approval", "Users", FormMethod.Post))
                                {
                                   <tr>
                                       <input type="hidden" name="Id" value="@item.Id"/>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Firstname)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Lastname)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        <select name="Role" value="@item.Role" class="form-select-sm">
                                            <option value="0" selected disabled>--Επιλέξτε Ρόλο Χρήστη--</option>
                                            <option value="1">Φοιτητής</option>
                                            <option value="2">Καθηγητής</option>
                                        </select>
                                    </td>
                                        <td><input type="submit" value="Αποθήκευση" class="btn float-right login_btn" /></td>
                                    </tr>
                                }
                            }     
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>





